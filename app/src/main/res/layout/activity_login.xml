<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/txt"
        android:text="未来就是法制化，你做好准备了吗"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/number"
        android:layout_marginBottom="50dp"
        android:textSize="17dp"
        android:textColor="#CB1E28"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/number"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/number_lin"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_width="0dp"
        android:hint="请输入手机号"
        android:background="@null"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content" />
    
    <View
        android:id="@+id/number_lin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/code"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <EditText
        android:id="@+id/code"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/code_line"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_width="0dp"
        android:hint="获取验证码"
        android:background="@null"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/get_code"
        android:text="获取验证码"
        android:textColor="#ccc"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="@+id/code"
        app:layout_constraintTop_toTopOf="@+id/code"
        app:layout_constraintBottom_toBottomOf="@+id/code"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <View
        android:id="@+id/code_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="42dp"
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <Button
        android:id="@+id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_agree"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:text="登录"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="@drawable/bg_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_agree"
        android:text="登录即代表"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/txt_three"
        android:text="第三方登录"
        android:layout_marginBottom="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_width="95dp"
        android:textSize="12dp"
        android:textColor="#ddd"
        android:layout_height="wrap_content" />
    
    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_three"
        app:layout_constraintBottom_toBottomOf="@+id/txt_three"
        app:layout_constraintRight_toLeftOf="@+id/txt_three"
        android:layout_marginLeft="45dp"
        android:layout_width="0dp"
        android:background="#e6e6e6"
        android:layout_height="1dp"/>

    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_three"
        app:layout_constraintBottom_toBottomOf="@+id/txt_three"
        app:layout_constraintLeft_toRightOf="@+id/txt_three"
        android:layout_marginRight="45dp"
        android:layout_width="0dp"
        android:background="#e6e6e6"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/qq"
        android:src="@mipmap/icon_qq"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/weibo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="81dp" />

    <ImageView
        android:id="@+id/weibo"
        android:src="@mipmap/icon_weibo"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf="@+id/qq"
        app:layout_constraintRight_toLeftOf="@+id/wechat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="81dp" />

    <ImageView
        android:id="@+id/wechat"
        android:src="@mipmap/icon_wechat"
        android:scaleType="center"
        app:layout_constraintLeft_toRightOf="@+id/weibo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="81dp" />

</android.support.constraint.ConstraintLayout>